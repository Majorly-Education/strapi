{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "questionText": {
      "type": "text",
      "required": true
    },
    "questionType": {
      "type": "enumeration",
      "enum": ["multipleChoice", "singleChoice", "trueFalse"],
      "default": "multipleChoice"
    },
    "quiz": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz.quiz",
      "inversedBy": "questions"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "answerOptions": {
      "type": "component",
      "component": "quiz.answer-option",
      "repeatable": true
    }
  }
}
