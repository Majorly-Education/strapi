{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question"
  },
  "attributes": {
    "questionText": {
      "type": "text",
      "required": true
    },
    "questionType": {
      "type": "enumeration",
      "enum": [
        "multipleChoice",
        "trueFalse",
        "dragDropRanking",
        "dragDropCategorize",
        "multiSelect",
        "fillInBlanks"
      ],
      "required": true
    },
    "quiz": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz.quiz",
      "inversedBy": "questions"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "points": {
      "type": "integer",
      "default": 1
    },
    "instruction": {
      "type": "string",
      "description": "e.g., 'Drag and drop top 3', 'Select 4 best answers'"
    },
    
    "content": {
      "type": "dynamiczone",
      "components": [
        "question.multiple-choice-content",
        "question.true-false-content",
        "question.drag-drop-content",
        "question.multi-select-content",
        "question.fill-blanks-content"
      ]
    },
    
    "explanation": {
      "type": "text"
    }
  }
}