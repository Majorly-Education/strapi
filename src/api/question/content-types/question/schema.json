{
  "kind": "collectionType",
  "collectionName": "questions",
  "attributes": {
    "question_text": {
      "type": "text",
      "required": true
    },
    "question_type": {
      "type": "enumeration",
      "enum": [
        "multiple_choice",
        "true_false", 
        "drag_drop_ranking",
        "drag_drop_categorize",
        "multi_select",
        "fill_in_blanks"
      ],
      "required": true
    },
    "quiz": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz.quiz",
      "inversedBy": "questions"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "points": {
      "type": "integer",
      "default": 1
    },
    "instruction": {
      "type": "string",
      "description": "e.g., 'Drag and drop top 3', 'Select 4 best answers'"
    },
    
    "content": {
      "type": "dynamiczone",
      "components": [
        "questions.multiple-choice-content",
        "questions.true-false-content",
        "questions.drag-drop-content", 
        "questions.multi-select-content",
        "questions.fill-blanks-content"
      ]
    },
    
    "explanation": {
      "type": "text"
    }
  }
}