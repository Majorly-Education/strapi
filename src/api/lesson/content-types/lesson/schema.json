{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Lesson content with dynamic sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "duration": {
      "type": "integer",
      "default": 15
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Beginner", "Intermediate", "Advanced"],
      "default": "Beginner"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.rich-text",
        "content.image",
        "content.video",
        "content.gallery",
        "lesson.cta",
        "lesson.author-header",
        "lesson.segments"
      ]
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "tags": {
      "type": "json"
    }
  }
}
