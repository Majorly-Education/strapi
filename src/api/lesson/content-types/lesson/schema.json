{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Template-based lesson with predefined structures"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "duration": {
      "type": "integer",
      "default": 15
    },
    "difficulty": {
      "type": "enumeration",
      "default": "Beginner",
      "enum": [
        "Beginner",
        "Intermediate",
        "Advanced"
      ]
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons"
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "xp_value": {
      "type": "integer",
      "default": 0
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "json"
    },
    "content": {
      "type": "component",
      "component": "lesson.lesson-page-template-1",
      "repeatable": false,
      "required": true
    },
    "media": {
      "type": "dynamiczone",
      "components": [
        "content.video",
        "content.image",
        "content.gallery"
      ]
    },
    "quiz": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quiz.quiz",
      "inversedBy": "lesson"
    },
    "shortDescription": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true
    },
    "resourceFiles": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
