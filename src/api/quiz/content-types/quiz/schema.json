{
  "kind": "collectionType",
  "collectionName": "quizzes",
  "info": {
    "singularName": "quiz",
    "pluralName": "quizzes",
    "displayName": "Quiz"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "lesson": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::lesson.lesson",
      "inversedBy": "quiz"
    },
    "description": {
      "type": "text"
    },
    "totalQuestions": {
      "type": "integer"
    },
    "passingScore": {
      "type": "integer",
      "default": 70
    },
    "timeLimit": {
      "type": "integer",
      "description": "Time limit in minutes"
    },
    "questions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::question.question",
      "mappedBy": "quiz"
    }
  }
}
