{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "course_id": {
      "type": "uid"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "xp_value": {
      "type": "integer",
      "default": 0
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "track": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::track.track",
      "inversedBy": "courses"
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module"
    },
    "description": {
      "type": "text"
    }
  }
}
