{
  "collectionName": "components_content_videos",
  "info": {
    "displayName": "Video",
    "description": "Video content with optional caption"
  },
  "options": {},
  "attributes": {
    "video": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "videos"
      ]
    },
    "caption": {
      "type": "string"
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "controls": {
      "type": "boolean",
      "default": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "shortDescription": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true
    },
    "transcript": {
      "type": "text",
      "required": true
    }
  }
}
